
## Colored user prompt:

set_prompt () {
	Yellow='\[\e[38;5;73m\]'
	Blue='\[\e[38;5;23m\]'
	BG='\[\e[0m\]'

	PS1="$Yellow\\u: $Blue\\W $BG\\$ "
}

PROMPT_COMMAND='set_prompt'


## Colored root prompt

set_prompt () {
	BG='\[\e[0m\]'
	Red='\[\e[38;5;48m\]'
	Blue='\[\e[38;5;23m\]'

	PS1="$Red\u: $Blue\W $BG\$ "
}

PROMPT_COMMAND='set_prompt'



